{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"plugin:react/recommended",
		"airbnb"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"indent": ["error", "tab"],
		"no-tabs": 0,
		"react/jsx-indent" : ["error", "tab"],
		"react/jsx-indent-props" : ["error", "tab"],
		"react/jsx-one-expression-per-line": 0,
		"jsx-a11y/label-has-associated-control": ["error", {
			"required": {
				"some": ["nesting", "id"]
				}
			}],
		"jsx-a11y/label-has-for": ["error", {
			"required": {
			"some": ["nesting", "id"]
			}
		}]
	}
}
